<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffeaedec">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter Details"
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="signup"
        android:text="Sign Up"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Phone Number"
        android:id="@+id/textView5"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical|left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView6"
        android:gravity="center_vertical|left"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Upload Profile Photo"
        android:id="@+id/textView7"
        android:gravity="center_vertical|left"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView8"
        android:gravity="center_vertical|left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button4"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView7"
        android:layout_marginRight="23dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/editText6"
        android:layout_alignEnd="@+id/editText6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7"/>

</RelativeLayout>